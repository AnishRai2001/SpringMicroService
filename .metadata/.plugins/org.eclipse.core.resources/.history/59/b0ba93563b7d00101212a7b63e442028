package com.example.demo.client;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestHeader;

import com.example.demo.dto.EmployeeDto;

@FeignClient(name = "JWTSECURITY") // <- Your auth service app name in Eureka
public interface AuthServiceFeignClient {

    @GetMapping("/auth/v1/users/email/{email}")
    EmployeeDto getUserByEmail(@PathVariable("email") String email,@RequestHeader("Authorization") String token));
}